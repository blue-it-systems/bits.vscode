{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current Test (Auto-detect)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "exec",
        "${workspaceFolder}/SampleTests/bin/Debug/net10.0/SampleTests.dll",
        "--treenode-filter",
        "${command:csharp-test-filter.getTestFilterForInput.filter}",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      },
      "justMyCode": true,
      "suppressJITOptimizations": true
    },
    {
      "name": "Debug All Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/SampleTests.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    }
  ]
}
