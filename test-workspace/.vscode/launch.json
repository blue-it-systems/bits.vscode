{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸŽ¯ TUnit Filter Auto",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "exec",
        "${workspaceFolder}/bin/Debug/net10.0/SampleTests.dll",
        "--treenode-filter",
        "${command:csharp-test-filter.getFilter}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      },
      "justMyCode": true,
      "suppressJITOptimizations": true
    },
    {
      "name": "ðŸŽ¯ TUnit Filter User",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "exec",
        "${workspaceFolder}/bin/Debug/net10.0/SampleTests.dll",
        "--treenode-filter",
        "/*/*/${input:testFilter}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      },
      "justMyCode": true,
      "suppressJITOptimizations": true
    }
  ],
  "inputs": [
    {
      "id": "testFilter",
      "type": "promptString",
      "description": "Enter test filter (format: ClassName/MethodName or ClassName/*)",
      "default": "CalculatorTests/Add_ShouldReturnCorrectSum"
    }
  ]
}
