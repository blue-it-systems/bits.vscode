{
  "name": "csharp-test-filter",
  "displayName": "C# Test Filter Helper",
  "description": "Automatically detect C# test scope (assembly/class/method) for TUnit debugging",
  "version": "1.0.2",
  "publisher": "bits",
  "icon": "images/icon.png",
  "author": {
    "name": "Blue IT Systems GmbH",
    "email": "github.bits.vscode@it-blue.com",
    "url": "https://it-blue.com"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Debuggers"
  ],
  "keywords": [
    "csharp",
    "testing",
    "tunit",
    "test-runner",
    "debugging",
    "test-filter",
    "dotnet"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csharp-test-filter.getCurrentTestScope",
        "title": "C# Test Filter: Get Current Test Scope"
      },
      {
        "command": "csharp-test-filter.copyTestFilter",
        "title": "C# Test Filter: Copy Test Filter to Clipboard"
      }
    ],
    "configuration": {
      "title": "C# Test Filter",
      "properties": {
        "csharpTestFilter.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notification messages when detecting test scope"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "~5.5.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blue-it-systems/bits.vscode.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blue-it-systems/bits.vscode/issues"
  },
  "homepage": "https://github.com/blue-it-systems/bits.vscode#readme"
}
